@model Faces.Domain.Entities.Image

@{
    ViewData["Title"] = "Create";
}

<style>
    .create-body {
        margin-top: 25%;
    }

    .create-header {
        margin-bottom: 10%;
    }

    .btn-create {
        width: 40%;
        font-size: 30px;
    }

    .input-create {
        font-size: 30px;
    }
</style>

<div class="create-body">
    <div class=" row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 class="create-header">Create new image</h1>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="ImageUrl" class="control-label"></label>*@
                    <input asp-for="ImageUrl" class="input-create form-control" placeholder="Input image URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn-create btn btn-lg btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
